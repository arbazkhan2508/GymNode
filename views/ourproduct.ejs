<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="../stylesheets/nav.css">
    <link rel="stylesheet" href="../stylesheets/footer.css">
    <link rel="stylesheet" href="../stylesheets/ourproducts.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <style>
         .up{
            background-color: #000;color: #fff;padding: .5vmax 2vmax;border-radius: 2vmax;font-size: 1vmax;font-weight: 600;
            font-weight: 600;
            letter-spacing: .5px;
         }
    </style>
    <% include ./partials/nav.ejs %>
    <div id="main">
        <h1>Out Products</h1>
        <div id="products_wrapper">
            <div id="products">
                <% allproduct.forEach(function(product){ %>
                        <div id="product">
                            <div class="img">
                                <img src="../images/uploads/productimages/<%= product.pic[4] %>"
                                alt="">
                                <div class="overlay">
                                    <img src="../images/uploads/productimages/<%= product.pic[0] %>"
                                        alt="">
                                    
                                </div>
                            </div>
                            <div class="text">
                                <h4 style="font-weight: 600;"><%= product.productName %></h4>
                                 <div style="display: flex;align-items: center;gap: 1.5vmax;" class="buttons">
                                     <div onclick="window.location.href='/updateproduct/<%= product._id %>'"   class="up">
                                          Update
                                     </div>
                                     <div onclick="window.location.href='/deleteproduct/<%= product._id %>'"  style="background-color: rgb(215, 5, 5);" class="up">
                                        Delete
                                   </div>
                                 </div>
                            </div>
                        </div>
                <% }) %>
            </div>
          </div>
    </div>
    <% include ./partials/footer.ejs %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>